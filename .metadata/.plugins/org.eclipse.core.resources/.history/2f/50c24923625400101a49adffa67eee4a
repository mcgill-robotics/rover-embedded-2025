#ifndef INC_STSPIN948_H_
#define INC_STSPIN948_H_

struct BrushedDriver {
	// outputs
	uint32_t pwm_a;
	uint32_t pwm_b;
	uint8_t phase_a;
	uint8_t phase_b;
	uin16_t dacRef_a;
	uint16_t dacRef_b;

	//inputs
	uint8_t enFault_a;
	uint8_t enFault_b;
	uint16_t cur_a;
	uint16_t cur_b;

};

void readInputs(struct BrushedDriver* driverInstance);

#endif /* INC_STSPIN948_H_ */
